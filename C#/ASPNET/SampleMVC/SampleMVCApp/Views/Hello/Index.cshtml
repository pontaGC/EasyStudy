@{
    var name = ViewData["name"];
    var mail = ViewData["mail"];
    var tel = ViewData["tel"];

    var selectedCountryLabel = ViewData["Selected countries label"];
    var selectedCountry = ViewData["CurrentCountry"];
    var countryData = ViewData["Countries"] as List<string>;

    var countries = countryData.Select(item => new SelectListItem() { Value = item, Text = item }).ToList();
}

<div class="text-center">
    <h1>Index</h1>

